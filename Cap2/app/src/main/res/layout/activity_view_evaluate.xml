<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewEvaluate"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_margin="25dp"
        android:background="@color/background">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng khám nhi- Dinh dưỡng chuyên sâu"
            android:gravity="center"
            android:textSize="18dp"
            />
        <LinearLayout
            android:id="@+id/layout_vote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txt_title"
            android:gravity="center">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:progressTint="@android:color/holo_orange_dark"
                android:rating="4"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_vote"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/header_title_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp">


                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/avt" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:text="TayPS" />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_below="@id/txt_name"
                    android:textSize="10dp"
                    android:text="1 tháng trước" />



                <LinearLayout
                    android:id="@+id/layout_vote_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minWidth="50dp"
                    android:layout_marginLeft="90dp"
                    android:layout_below="@+id/txt_date"
                    android:gravity="center">

                    <RatingBar
                        android:id="@+id/ratingBar_comment"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_marginLeft="-160dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:progressTint="@android:color/holo_orange_dark"
                        android:stepSize="1" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/header_content_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_title_comment"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trẻ em hay trẻ nhỏ, con nít, đứa trẻ, đứa bé, đứa nhỏ, thiếu nhi, cháu bé, cháu nhỏ, trẻ thơ, bé thơ là một con người ở giữa giai đoạn từ khi sinh ra và tuổi dậy thì về mặt sinh học"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_view_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_comment"
            android:gravity="center">


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_view_comment"
            android:gravity="center"
            android:layout_marginTop="360dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Viết bài đánh giá"/>

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>